<!-- DISABLE INSPECT -->
<script>
  function disableInspect(e) {
    if (e.keyCode == 123 || // F12
        (e.ctrlKey && e.shiftKey && ['I', 'C', 'J'].includes(e.key.toUpperCase())) ||
        (e.ctrlKey && e.key.toUpperCase() === 'U')) {
      return false;
    }
  }
</script>
