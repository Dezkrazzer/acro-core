<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login / Register - CGO</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            primary: "#1E293B",
            secondary: "#7DD3FC",
            warning: "#FACC15",
          },
        },
      },
    };
  </script>
</head>
<body class="bg-gradient-to-b from-gray-900 to-gray-800 text-white min-h-screen flex items-center justify-center">

  <!-- Container -->
  <div class="bg-gray-800 p-8 rounded-2xl w-full max-w-md shadow-lg">
    <!-- Logo -->
    <div class="flex justify-center mb-6">
      <img src="https://acronet.work/assets/logo.png" class="w-20"/>
    </div>

    <!-- Text -->
    <h1 class="text-4xl text-center  md:text-4xl font-bold gradient-text mt-2 mb-6" id="form-title">
      Acro Network
    </h1>

    <!-- Form -->
    <form id="form">
      <!-- Email -->
      <input
        type="text"
        placeholder="Email"
        class="w-full p-3 rounded bg-gray-700 text-white mb-3 focus:outline-none focus:ring-2 focus:ring-secondary"
      />

      <!-- Username -->
      <input
        type="text"
        placeholder="Username"
        id="username"
        class="w-full p-3 rounded bg-gray-700 text-white mb-3 focus:outline-none focus:ring-2 focus:ring-secondary"
      />

      <!-- Password -->
      <input
        type="password"
        placeholder="Password"
        id="password"
        class="w-full p-3 rounded bg-gray-700 text-white mb-3 focus:outline-none focus:ring-2 focus:ring-secondary"
      />

      <!-- Konfirmasi Password -->
      <input
        type="password"
        placeholder="Confirm Password"
        class="w-full p-3 rounded bg-gray-700 text-white mb-3 hidden"
        id="confirm-password"
      />

      <!-- Tampilkan sandi -->
      <label class="text-sm text-white cursor-pointer">
        <input type="checkbox" onclick="togglePassword()" class="mr-2" /> Tampilkan Sandi
      </label>

      <div class="mb-4 text-right">
    <a href="/lupa-password" id="lupa-password" class="text-sm text-secondary hover:no-underline"></a>
  </div>

      <!-- Submit button -->
      <button
        type="submit"
        class="w-full bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 mt-4 rounded"
        id="submit-button"
      >
        Daftar
      </button>
    </form>

    <p class="text-center mt-2"> or </p>

    <!-- Discord button -->
      <a
    href="/auth/discord"
    class="w-full flex items-center justify-center bg-[#5865F2] hover:bg-[#4752c4] text-white font-semibold py-2 mt-3 rounded transition"
  >
    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
      <path
        d="M20.317 4.369a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.078.037c-.21.375-.444.864-.608 1.249-1.84-.276-3.68-.276-5.486 0-.163-.401-.405-.874-.617-1.249a.077.077 0 0 0-.078-.037 19.736 19.736 0 0 0-4.885 1.515.069.069 0 0 0-.032.027C.533 9.045-.32 13.58.099 18.057a.084.084 0 0 0 .031.056 19.984 19.984 0 0 0 5.993 3.053.078.078 0 0 0 .084-.027c.463-.63.874-1.295 1.226-1.994a.076.076 0 0 0-.041-.105 13.21 13.21 0 0 1-1.884-.882.077.077 0 0 1-.008-.129c.126-.094.252-.192.37-.291a.074.074 0 0 1 .077-.01c3.927 1.793 8.18 1.793 12.061 0a.074.074 0 0 1 .078.01c.119.099.244.197.37.291a.077.077 0 0 1-.007.129 12.964 12.964 0 0 1-1.885.882.076.076 0 0 0-.04.105c.36.698.772 1.364 1.226 1.994a.076.076 0 0 0 .084.027 19.933 19.933 0 0 0 6.002-3.053.077.077 0 0 0 .03-.056c.5-5.177-.838-9.657-3.548-13.661a.061.061 0 0 0-.031-.027zM8.02 15.331c-1.183 0-2.156-1.085-2.156-2.419 0-1.333.955-2.418 2.157-2.418 1.21 0 2.174 1.093 2.156 2.418 0 1.334-.955 2.419-2.157 2.419zm7.974 0c-1.183 0-2.156-1.085-2.156-2.419 0-1.333.955-2.418 2.156-2.418 1.21 0 2.175 1.093 2.157 2.418 0 1.334-.947 2.419-2.157 2.419z"
      />
    </svg>
    Login dengan Discord
  </a>

    <!-- Switch form -->
    <p class="text-center text-sm mt-4">
      <span id="switch-text">Sudah punya akun?</span>
      <button onclick="toggleForm()" class="text-secondary font-semibold underline ml-1">
        Login di sini
      </button>
    </p>
  </div>

  <script>
    const confirmPassword = document.getElementById("confirm-password");
    const username = document.getElementById("username");
    const submitButton = document.getElementById("submit-button");
    const switchText = document.getElementById("switch-text");
    const forgotpassword = document.getElementById("lupa-password");

    let isRegister = true;

    function toggleForm() {
      isRegister = !isRegister;

    forgotpassword.innerHTML = isRegister
        ? ""
        : "Lupa Password?";

      confirmPassword.classList.toggle("hidden", !isRegister);
      username.classList.toggle("hidden", !isRegister);
      submitButton.textContent = isRegister ? "Daftar" : "Login";
      switchText.textContent = isRegister
        ? "Sudah punya akun?"
        : "Belum punya akun?";
      document.querySelector("button[onclick='toggleForm()']").textContent = isRegister
        ? "Login di sini"
        : "Daftar di sini";
    }

    function togglePassword() {
      const password = document.getElementById("password");
      const confirmPassword = document.getElementById("confirm-password");
      const isHidden = password.type === "password";

      password.type = isHidden ? "text" : "password";
      confirmPassword.type = isHidden ? "text" : "password";
    }
  </script>
</body>
</html>
