<script>
  async function updatePlayerCount() {
    try {
      const response = await fetch('https://api.mcsrvstat.us/3/play.acronet.work');
      const data = await response.json();

      const online = data.players?.online ?? 0;
      const max = data.players?.max ?? 0;

      document.getElementById("player-count").textContent = `${online} / ${max}`;
    } catch (error) {
      console.error("Gagal mengambil data player:", error);
      document.getElementById("player-count").textContent = "Status tidak tersedia";
    }
  }

  // Panggil saat halaman dibuka
  updatePlayerCount();

  // Perbarui setiap 30 detik
  setInterval(updatePlayerCount, 30000);
</script>

<script>
  async function fetchServerStatus() {
    try {
      const response = await fetch('https://api.mcsrvstat.us/3/play.acronet.work');
      const data = await response.json();

      const serverDot = document.getElementById('server-status-dot');
      if (data.online) {
        serverDot.classList.remove('bg-red-500');
        serverDot.classList.add('bg-green-500');
      } else {
        serverDot.classList.remove('bg-green-500');
        serverDot.classList.add('bg-red-500');
      }
    } catch (error) {
      const serverDot = document.getElementById('server-status-dot');
      serverDot.classList.remove('bg-green-500');
      serverDot.classList.add('bg-red-500');
    }
  }

  fetchServerStatus();
  setInterval(fetchServerStatus, 60000);
</script>

